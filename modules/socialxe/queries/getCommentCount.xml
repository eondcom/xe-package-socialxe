<query id="getCommentCount" action="select">
	<tables>
		<table name="comments" alias="comments" />
	</tables>
	<columns>
		<column name="count(*)" alias="count" />
	</columns>
	<conditions>
		<condition operation="equal" column="comments.document_srl" var="document_srl" notnull="notnull" pipe="and" />
	</conditions>
</query>
